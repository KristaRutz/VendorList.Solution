@using VendorTracker.Models;

<h1>My Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>Vendors list is empty</h3>
} 

<ul>
  <li><a href="/vendors/0">I am a clickable Example Vendor</a></li>
@foreach (Vendor vendor in Model)
{
  <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
}
</ul>


<a href="/vendors/new">Add-A-Vendor</a>